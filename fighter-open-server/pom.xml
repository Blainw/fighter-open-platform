        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>fighter-open-server</artifactId>
    <name>fighter-open-server</name>
    <version>1.0.0-SNAPSHOT</version>
    <description>应用集市-服务</description>
    <dependencies>

        <dependency>
            <groupId>ai.wiseloong</groupId>
            <artifactId>fighter-open-api</artifactId>
            <version>1.0.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>com.github.xiaoymin</groupId>
            <artifactId>swagger-bootstrap-ui</artifactId>
            <version>${swagger.bootstrap.ui.version}</version>
        </dependency>
        <dependency>
            <groupId>ai.wiseloong</groupId>
            <artifactId>fighter-framework-system-manage-api</artifactId>
        </dependency>
        <dependency>
            <groupId>ai.wiseloong</groupId>
            <artifactId>fighter-framework-permission-api</artifactId>
        </dependency>
        <dependency>
            <groupId>ai.wiseloong</groupId>
            <artifactId>fighter-framework-tenant-manage-api</artifactId>
        </dependency>
        <dependency>
            <groupId>ai.wiseloong</groupId>
